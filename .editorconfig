# EditorConfig for luatex-cn Project
# https://editorconfig.org

root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Indentation for Lua files
[*.lua]
indent_style = space
indent_size = 4

# Indentation for TeX/LaTeX files
[*.{tex,sty,cls}]
indent_style = space
indent_size = 2

# Indentation for Python files
[*.py]
indent_style = space
indent_size = 4

# Indentation for Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Indentation for YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Template files
[*.guji]
indent_style = space
indent_size = 4
