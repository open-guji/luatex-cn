{
  "name": "luatex-cn",
  "version": "0.1.0",
  "description": "LuaTeX package for Chinese character and vertical typesetting support",
  "license": "LPPL 1.3",
  "author": "luatex-cn contributors",
  "dependencies": {
    "required": [
      "luatexja",
      "luatexja-fontspec",
      "luatexja-otf"
    ],
    "optional": [
      "ctex",
      "chinese-jfm"
    ]
  },
  "files": {
    "style": "luatex-cn.sty",
    "lua": [
      "luatex-cn-vertical.lua",
      "luatex-cn-chinese.lua"
    ],
    "documentation": "luatex-cn.dtx",
    "examples": "example.tex"
  }
}
