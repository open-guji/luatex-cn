  {
    color .tl_set:N = \l__luatexcn_underline_color_tl,
    color .initial:n = red,
    offset .tl_set:N = \l__luatexcn_underline_offset_tl,
    offset .initial:n = 0.6em,
  }

% Internal: add line segment decoration for each character
\cs_new:Npn \__luatexcn_underline_one:n #1 {
  #1
  \lua_now:e {
    local~constants~=~require('core.luatex-cn-constants')
    constants.register_decorate(
